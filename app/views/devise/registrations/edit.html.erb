<section class="section-center">
  <h2 class="h2-type">編輯<%=current_user.email%>帳戶</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>目前正等待此帳號點選確認信: <%= resource.unconfirmed_email %></div>
    <% end %>
    <br>

    <div class="field">
      <%= f.label "名稱", class: 'label' %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "變更名稱", class: "input" %>
    </div>

    <div class="field">
      <%= f.label "目前密碼", class: 'label' %> <p class="font-thin">(請輸入目前的密碼以更新帳戶)</p>
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'input'  %>
    </div>   

    <div class="border border-dashed border-red-500 rounded-lg my-5 py-5 w-1/3 mx-auto">
      <div class="field">
        <%= f.label "變更新密碼區", class: 'label text-red-500 font-large text-xl' %>        
        <p class="font-thin">(如果這次不想變更密碼，請保留空白)</p>
        <p class="text-sm font-thin"><em>至少<%= @minimum_password_length %>位數字元</em></p>      
        <%= f.password_field :password, autocomplete: "new-password", class: 'input'  %>
        <br>
      </div>
    
      <div class="field">
        <%= f.label "請再次新輸入密碼", class: 'label text-red-500'  %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
      </div>
    </div>
  
    <div class="actions m-2">
      <%= f.submit "更新帳戶", class: 'main-button' %>
    </div>
  <% end %>
  
  <div class="links-section m-2">
    <%= link_to "回首頁", dashboard_path %>
  </div>
</section>



