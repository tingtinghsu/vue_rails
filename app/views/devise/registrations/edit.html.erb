<section class="section-center">
  <h2 class="h2-type">編輯<%=current_user.email%>帳戶</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>目前正等待此帳號點選確認信: <%= resource.unconfirmed_email %></div>
    <% end %>
    <br>

    <div class="field">
      <%= f.label "名稱", class: 'label' %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "變更名稱", class: "input" %>
    </div>

    <div class="field">
      <%= f.label "目前密碼", class: 'label' %> <p>(請輸入目前的密碼以更新帳戶)</p>
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'input'  %>
    </div>   

    <div class="field">
      <%= f.label "新密碼", class: 'label' %>        <p>至少<%= @minimum_password_length %>位數字元</p><p>(如果這次不想變更密碼，請保留空白)</p>
      <%= f.password_field :password, autocomplete: "new-password", class: 'input'  %>
      <% if @minimum_password_length %>
        <br />

      <% end %>
    </div>
  
    <div class="field">
      <%= f.label "請再次新輸入密碼", class: 'label'  %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
    </div>
  
    <div class="actions m-2">
      <%= f.submit "更新帳戶", class: 'main-button' %>
    </div>
  <% end %>
  
  <div class="links-section m-2">
    <%= link_to "回首頁", dashboard_path %>
  </div>
</section>



